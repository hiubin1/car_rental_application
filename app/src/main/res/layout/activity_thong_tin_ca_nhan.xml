<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ActivityCus.ThongTinCaNhanActivity"
    >

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:background="#A7F1C1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="120dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radius2goc">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="80dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:textSize="14dp"
                                        android:text="Số điện thoại:"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textStyle="bold"
                                        android:textColor="#FF0000"
                                        android:textSize="14dp"
                                        android:text="*"/>

                                </LinearLayout>



                                <EditText
                                    android:id="@+id/edtSDT_ThongTinCaNhan_cus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/custom_edt"
                                    android:layout_marginTop="5dp"
                                    android:inputType="number"
                                    android:textSize="14dp"
                                    android:paddingLeft="10dp"
                                    android:hint="Nhập số điện thoại..."/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:textSize="14dp"
                                        android:text="Họ và tên:"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textStyle="bold"
                                        android:textColor="#FF0000"
                                        android:textSize="14dp"
                                        android:text="*"/>

                                </LinearLayout>

                                <EditText
                                    android:id="@+id/edtHoTen_ThongTinCaNhan_cus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/custom_edt"
                                    android:layout_marginTop="5dp"
                                    android:inputType="text"
                                    android:textSize="14dp"
                                    android:paddingLeft="10dp"
                                    android:hint="Nhập số họ tên..."/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:textSize="14dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Căn cước công dân:"/>

                                <EditText
                                    android:id="@+id/edtCCCD_ThongTinCaNhan_cus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/custom_edt"
                                    android:layout_marginTop="5dp"
                                    android:inputType="number"
                                    android:textSize="14dp"
                                    android:paddingLeft="10dp"
                                    android:hint="Nhập số căn cước..."/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:textSize="14dp"
                                        android:text="Giấy phép lái xe:"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textStyle="bold"
                                        android:textColor="#FF0000"
                                        android:textSize="14dp"
                                        android:text="*"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/custom_bgspinner"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/tvGPLX_ThongTinCaNhan_cus"
                                        android:layout_width="250dp"
                                        android:gravity="center_vertical"
                                        android:layout_height="46dp"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <Spinner
                                        android:id="@+id/spnGPLX_ThongTinCaNhan_cus"
                                        android:layout_width="wrap_content"

                                        android:layout_height="match_parent"
                                        android:textColor="@color/black" />


                                </LinearLayout>

                                <Button
                                    android:id="@+id/btnChinhSua_ThonTinCaNhan_Cus"
                                    android:layout_width="match_parent"
                                    android:backgroundTint="@color/MainColorGreen"
                                    android:layout_marginLeft="50dp"
                                    android:textSize="13dp"
                                    android:layout_marginRight="50dp"
                                    android:layout_height="wrap_content"
                                    android:onClick="btnChinhSua_ThonTinCaNhan_Cus_onclick"
                                    android:layout_marginTop="10dp"
                                    android:text="Chỉnh sửa thông tin" />

                            </LinearLayout>



                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginTop="60dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgAvatar_2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/avatar"
                        android:layout_marginBottom="10dp"
                        tools:ignore="MissingClass" />

                </LinearLayout>


            </FrameLayout>

        </LinearLayout>
    </ScrollView>






</LinearLayout>