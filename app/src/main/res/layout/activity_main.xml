<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/MainColorGreen"
    android:layout_height="match_parent"
    tools:context=".ActivityCus.MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:src="@drawable/logopj" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
       android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="15dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Đăng nhập"/>
    </androidx.cardview.widget.CardView>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:paddingTop="10dp"
       android:background="@drawable/radius2goc">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingTop="10dp"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:orientation="vertical">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:textSize="14dp"
                   android:text="Số điện thoại:"/>

               <EditText
                   android:id="@+id/edtSDT_Login_cus"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/custom_edt"
                   android:layout_marginTop="5dp"
                   android:inputType="number"
                   android:textSize="14dp"
                   android:paddingLeft="10dp"
                   android:hint="Nhập số điện thoại"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:layout_marginTop="10dp"
               android:orientation="vertical">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:textSize="14dp"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:text="Mật khẩu:"/>

               <EditText
                   android:id="@+id/edtPW_Login_cus"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/custom_edt"
                   android:layout_marginTop="5dp"
                   android:inputType="textPassword"
                   android:textSize="14dp"
                   android:paddingLeft="10dp"
                   android:hint="Nhập mật khẩu"/>

           </LinearLayout>

           <CheckBox
               android:id="@+id/chkGhiNhoMK"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="15dp"
               android:layout_marginBottom="5dp"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:layout_marginLeft="10dp"
               android:text="Nhớ mật khẩu" />

           <Button
               android:id="@+id/btnDangNhap"
               android:layout_width="match_parent"
               android:backgroundTint="@color/MainColorGreen"
               android:layout_marginLeft="50dp"
               android:textSize="13dp"
               android:layout_marginRight="50dp"
               android:layout_height="wrap_content"
               android:onClick="btnDangNhap_onclick"
               android:layout_marginTop="5dp"
               android:text="Đăng nhập" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="20dp"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="30dp"
               android:background="@drawable/custom_dash"
               android:orientation="vertical"></LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="20dp"
               android:layout_marginBottom="20dp"
               android:gravity="center"
               android:orientation="horizontal"
               android:textAlignment="center">

               <TextView
                   android:id="@+id/textView8"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10dp"
                   android:text="Bạn chưa là thành viên? "
                   android:textColor="@color/black"
                   android:textSize="14dp" />

               <Button
                   android:id="@+id/btnPageRegister"
                   android:layout_width="140dp"
                   android:layout_height="wrap_content"
                   android:backgroundTint="@color/MainColorGreen"
                   android:inputType="textCapCharacters"
                   android:onClick="btnPageRegister_onclick"
                   android:textSize="13dp"
                   android:text="Đăng ký"
                   android:textColor="@color/white" />
           </LinearLayout>


       </LinearLayout>




   </LinearLayout>


</LinearLayout>