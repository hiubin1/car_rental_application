<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCus.ChonLichThueXeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_HinhXe_ChonLichThueXe"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/carmorrisgarages" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            app:cardBackgroundColor="#C0D8ED"
                            android:layout_marginLeft="10dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_TruyenDong_ChonLichThueXe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:padding="5dp"
                                android:textColor="@color/black"
                                android:text="Số tự động"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            app:cardBackgroundColor="#fce0d3"
                            android:layout_marginLeft="5dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_HinhThucGiaoXe_QuanLyXe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:padding="5dp"
                                android:textColor="@color/black"
                                android:text="Giao xe tận nơi"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_TenXe_ChonLichThueXe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:drawablePadding="5dp"
                        android:text="MORRIS GARAGES MG5 STANDARD 2022"
                        android:drawableRight="@drawable/check20"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="13dp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/money20"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:gravity="center|left"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:text="Giá tiền thuê:" />

                        <TextView
                            android:id="@+id/tv_GiaTien_ChonLichThueXe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:textSize="13dp"
                            android:textColor="@color/MainColorGreen"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:drawablePadding="5dp"
                            android:text="800000"
                            tools:ignore="InvalidId" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:textSize="13dp"
                            android:gravity="right"
                            android:textColor="@color/MainColorGreen"
                            android:drawablePadding="5dp"
                            android:textStyle="bold"
                            android:text="đ"
                            tools:ignore="InvalidId" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:textSize="13dp"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:drawablePadding="5dp"
                            android:text="/ngày"
                            tools:ignore="InvalidId" />

                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:textSize="13dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/biensoxe20"
                            android:text="Biển số xe:" />

                        <TextView
                            android:id="@+id/tv_BienSoXe_ChonLichThueXe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:drawablePadding="5dp"
                            android:text="25kkk"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:textSize="13dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/seat20"
                            android:text="Số ghế:" />

                        <TextView
                            android:id="@+id/tv_SoGhe_ChonLichThueXe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:drawablePadding="5dp"
                            android:text="4 chỗ"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="10dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@color/MainColorGreen"
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="13dp"
                            android:layout_height="wrap_content"
                            android:text="Thông tin thuê xe">

                        </TextView>


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Họ và tên:"
                            android:textSize="13dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/edt_HoTenUser_ChonLichThueXe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textColor="@color/black"
                            android:background="@drawable/custom_edt"
                            android:hint="Hãy nhập họ tên"
                            android:inputType="text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa điểm nhận xe:"
                            android:textSize="13dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/edt_DiaDiemNhanXe_ChonLichThueXe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textColor="@color/black"
                            android:background="@drawable/custom_edt"
                            android:hint="Hãy nhập địa điểm nhận xe"
                            android:inputType="text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa điểm trả xe:"
                            android:textSize="13dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/edt_DiaDiemTraXe_ChonLichThueXe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textColor="@color/black"
                            android:background="@drawable/custom_edt"
                            android:hint="Hãy nhập địa điểm nhận xe"
                            android:inputType="text" />

                    </LinearLayout>


                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="10dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@color/MainColorGreen"
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="13dp"
                            android:layout_height="wrap_content"
                            android:text="Chọn thời gian thuê">

                        </TextView>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày nhận xe:"
                                android:textSize="13dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/custom_edt"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvNgayNhanXe_ChonLichThueXe"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/white"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="15dp"
                                    android:onClick="openDateNhan_onclick"
                                    android:textColor="@color/black"
                                    android:layout_marginRight="5dp"
                                    />

                                <ImageButton
                                    android:id="@+id/imgbtn_ChonNgayNhanXe_ChonLichThueXe"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/white"
                                    android:textAlignment="center"
                                    android:onClick="openDateNhan_onclick"
                                    app:srcCompat="@drawable/calendar25"
                                    tools:ignore="RtlCompat" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giờ nhận xe:"
                                android:textSize="13dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/custom_edt"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvGioNhanXe_ChonLichThueXe"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/white"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="15dp"
                                    android:onClick="openTimeNhan_onclick"
                                    android:textColor="@color/black"
                                    android:layout_marginRight="5dp"
                                    />

                                <ImageButton
                                    android:id="@+id/imgbtn_ChonGioNhanXe_ChonLichThueXe"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/white"
                                    android:textAlignment="center"
                                    android:onClick="openTimeNhan_onclick"
                                    app:srcCompat="@drawable/time25"
                                    tools:ignore="RtlCompat" />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày trả xe:"
                                android:textSize="13dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/custom_edt"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvNgayTraXe_ChonLichThueXe"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/white"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:onClick="openDateTra_onclick"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:layout_marginRight="5dp"
                                    />

                                <ImageButton
                                    android:id="@+id/imgbtn_ChonNgayTraXe_ChonLichThueXe"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/white"
                                    android:textAlignment="center"
                                    android:onClick="openDateTra_onclick"
                                    app:srcCompat="@drawable/calendar25"
                                    tools:ignore="RtlCompat" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giờ trả xe:"
                                android:textSize="13dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/custom_edt"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvGioTraXe_ChonLichThueXe"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/white"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:layout_marginRight="5dp"
                                    />

                                <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/white"
                                    android:textAlignment="center"
                                    app:srcCompat="@drawable/time25"
                                    tools:ignore="RtlCompat" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnTiepTuc_ChonLichXe_onclick"
            android:backgroundTint="@color/MainColorGreen"
            android:text="Tiếp tục" />
    </LinearLayout>

</FrameLayout>