<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_white"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_gravity="center|top"
    android:layout_marginRight="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Gia hạn thuê xe"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_dash"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Số ngày gia hạn:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bgspinner"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/spn_SoNgayGiaHan_GiaHanDialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Ngày bắt đầu gia hạn:"/>

            <EditText
                android:id="@+id/edt_NgayGiaHan_GiaHanDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edt"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:textSize="14dp"
                android:paddingLeft="10dp"
                android:hint=""/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_dash"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Tổng tiền:"/>

            <TextView
                android:id="@+id/tv_TongTien_GiaHanDiaLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:gravity="right"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="800000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="right"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"
                android:textSize="15dp"
                android:text="đ"/>

        </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThanhToan_GiaHan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:backgroundTint="@color/MainColorGreen"
            android:text="Thanh toán"
            android:layout_marginRight="10dp"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btnHuy_GiaHan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:backgroundTint="#FF0000"
            android:text="Hủy"
            android:textSize="13dp" />

    </LinearLayout>
</LinearLayout>