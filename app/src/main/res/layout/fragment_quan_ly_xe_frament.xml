<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/MainColorGreen"
    android:orientation="vertical"
    tools:context=".FragmentAdmin.QuanLyXeFrament">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:background="@color/white"
            android:text="Quản lý xe"/>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/edtTimXe_QuanLyXe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/search24"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/custom_edt2"
        android:inputType="text"
        android:hint="Tìm kiếm xe..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:background="@drawable/radius2goc">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RCview_QuanLyXe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"/>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/FBAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:onClick="btnChiTietXeAdmin_onclick"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/MainColorGreen"
                android:src="@drawable/addbuttonwhite"
                tools:ignore="NotSibling" />

        </RelativeLayout>




    </LinearLayout>

</LinearLayout>