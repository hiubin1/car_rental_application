<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="FragmentCus.FragmentProfile"
    android:background="#A7F1C1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius2goc">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="160dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/user24"
                    android:drawableRight="@drawable/icon_next"
                    android:padding="10dp"
                    android:text="Thông tin cá nhân"
                    android:layout_marginBottom="10dp"
                    android:gravity="left"
                    android:onClick="btnThongTinCaNhan_onclick"
                    android:textColor="@color/black"
                    android:backgroundTint="#EAEDEB"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/car24"
                    android:drawableRight="@drawable/icon_next"
                    android:padding="10dp"
                    android:text="Lịch sử đặt xe"
                    android:layout_marginBottom="10dp"
                    android:onClick="btnXeCanThue_Cus_onclick"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:backgroundTint="#EAEDEB"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/contract24"
                    android:drawableRight="@drawable/icon_next"
                    android:padding="10dp"
                    android:text="Hợp đồng"
                    android:onClick="btnHopDong_Cus_onclick"
                    android:gravity="left"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#EAEDEB"/>


                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF0000"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Đăng xuất"
                    android:onClick="btnDangXuat_Cus_onclick"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/avatar"
            android:layout_marginBottom="10dp"
            tools:ignore="MissingClass" />
        <TextView
            android:id="@+id/tv_TenUser_Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mạnh Hiếu"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"/>
    </LinearLayout>


</FrameLayout>