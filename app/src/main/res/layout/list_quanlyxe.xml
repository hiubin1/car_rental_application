<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="370dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_ListXe"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#FDFDFD"
        app:cardElevation="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            app:cardElevation="5dp"
            android:layout_gravity="center|top"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgCar_QuanLyXe"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:src="@drawable/carmorrisgarages" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="#C0D8ED"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_TruyenDong_QuanLyXe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:text="Số tự động"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="#fce0d3"
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_HinhThucGiaoXe_QuanLyXe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:text="Giao xe tận nơi"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_TenXe_QuanLyXe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="MITSUBISHI XPANDER 2019"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check20" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/location20" />

                <TextView
                    android:id="@+id/tv_DiaDiemGiaoXe_QuanLyXe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:text="Quận 10, Hồ Chí Minh"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_dash2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:layout_marginBottom="10dp"

                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/seat20" />

                    <TextView
                        android:id="@+id/tv_ChoNgoi_QuanLyXe"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/black"
                        android:text="4 chỗ"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:layout_marginRight="10dp"
                    android:gravity="right|top"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/money20" />

                    <TextView
                        android:id="@+id/tv_GiaTien_QuanLyXe"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/MainColorGreen"
                        android:textStyle="bold"
                        android:text="750000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:textColor="@color/MainColorGreen"
                        android:textStyle="bold"
                        android:text="VNĐ"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:gravity="center"

                        android:textColor="@color/black"
                        android:text="/ngày"/>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>